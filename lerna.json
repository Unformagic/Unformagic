{
  "packages": [
    "configs/*",
    "doc",
    "packages/*"
  ],
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": [
        "develop",
        "staging",
        "main"
      ],
      "message": "chore(release): Publish"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
